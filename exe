#include <iostream>
#include <string>
#include <cstdlib>
#include <ctime>
using namespace std;

int main() {
    string words[] = {"programming","computer","algorithm","keyboard","network"};
    srand(time(0));
    string word = words[rand() % 5];
    string guessWord(word.length(), '_');
    string guessedLetters = "";
    int tries = 6;
    
    cout << "Hangman Game!\n";
    
    while(tries > 0 && guessWord != word){
        cout << "Word: " << guessWord << "\n";
        cout << "Guess a letter: ";
        char letter;
        cin >> letter;
        
        if(guessedLetters.find(letter) != string::npos){
            cout << "You already guessed that letter!\n";
            continue;
        }
        
        guessedLetters += letter;
        bool found = false;
        
        for(int i=0;i<word.length();i++){
            if(word[i]==letter){
                guessWord[i]=letter;
                found = true;
            }
        }
        
        if(!found){
            tries--;
            cout << "Wrong! Tries left: " << tries << "\n";
        }
    }
    
    if(guessWord == word) cout << "You won! The word was " << word << "\n";
    else cout << "Game over! The word was " << word << "\n";
    
    return 0;
}
